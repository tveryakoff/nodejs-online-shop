extends ../layouts/main.pug

block styles
  link(rel="stylesheet", href="/css/shop.css")
block content
  if productList.length > 0
    div.product-list
      each product in productList
        article.card.product-item
          header.card-header
            h1.product-title #{product.title}
          div.card__image
            img(src="test", alt="product-image")
          div.card__content
            h2.product__price $19.99
            p.product__description A very interesting book about so many even more
          div.card__actions
            button.btn Add to Cart
  else
    h1 No products

