extends ../layouts/shop/main

block styles
  link(rel="stylesheet", href="/css/add-product.css")
block content
  section.main-section
    form.add-product-form(action="/admin/add-product", method="POST")
      .input-wrapper
        label.input-label(for="title") Name
        input.add-product-form__input(id="title", type="text", name="title")
      .input-wrapper
        label.input-label(for="image") Image
        input.add-product-form__input(id="image", type="text", name="imageUrl")
      .input-wrapper
        label.input-label(for="image") Price
        input.add-product-form__input(id="price", type="number", name="price", step="0.01")
      .input-wrapper
        label.input-label(for="image") Description
        textarea.add-product-form__input.add-product-form__textarea(id="description", rows="5", name="description")
      button.add-product-form__button(type="submit") Add

