extends ../layouts/shop/main

block styles
  link(rel="stylesheet", href="/css/core/form.css")

block content
  section.main-section
    form.form(action='/signUp', method="POST" novalidate="true")
      input(type="hidden" name="_csrf" value=csrfToken)
      .input-wrapper
        label.input-label(for="email") Email
        .input-error-wrapper
          input.form__input(class=errors && errors.email && 'for__input_error', id="email", type="email", name="email", value=values ? values.email : undefined)
          if(errors && errors.email)
            .error #{errors.email}
      .input-wrapper
        label.input-label(for="password") Password
        .input-error-wrapper
          input.form__input(class=errors && errors.password && 'for__input_error', id="password", type="password", name="password", value= values ? values.password : undefined)
          if(errors && errors.password)
            .error #{errors.password}
      .input-wrapper
        label.input-label(for="confirmPassword") Confirm Password
        .input-error-wrapper
          input.form__input(class=errors && errors.confirmPassword && 'for__input_error', id="confirmPassword", type="password", name="confirmPassword" value=values ? values.email : undefined )
          if(errors && errors.confirmPassword)
            .error #{errors.confirmPassword}
      button.form__button(type="submit") Sign Up

