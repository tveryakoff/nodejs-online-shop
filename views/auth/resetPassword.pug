extends ../layouts/shop/main

block styles
  link(rel="stylesheet", href="/css/core/form.css")

block content
  section.main-section
    form.form(action='/reset-password', method="POST")
      input(type="hidden" name="_csrf" value=csrfToken)
      .input-wrapper
        label.input-label(for="email") Email
        input.form__input(id="email", type="email", name="email")
      if error
        .input-wrapper
          .error #{error}
      button.form__button(type="submit") Reset your password

